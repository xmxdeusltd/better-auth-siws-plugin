{
  "name": "better-auth-web3",
  "version": "1.0.0",
  "description": "SVM and EVM Wallet plugin for better-auth",
  "keywords": [
    "better-auth",
    "auth",
    "web3",
    "svm",
    "solana",
    "evm",
    "ethereum",
    "typescript",
    "security",
    "plugin"
  ],
  "homepage": "https://github.com/xmxdeusltd/better-auth-web3#readme",
  "bugs": {
    "url": "https://github.com/xmxdeusltd/better-auth-web3/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xmxdeusltd/better-auth-web3.git"
  },
  "license": "MIT",
  "author": "xmxdeusltd",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.mjs"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./util": {
      "import": {
        "types": "./dist/util.d.ts",
        "default": "./dist/util.mjs"
      },
      "require": {
        "types": "./dist/util.d.cts",
        "default": "./dist/util.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "better-auth": ">=1.3.5",
    "better-call": ">=1.0.13",
    "@noble/hashes": "^1.2.0",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.3.0",
    "zod": "^4.0.0",
    "better-call": "^1.0.13"
  },
  "scripts": {
    "build": "tsup"
  }
}
